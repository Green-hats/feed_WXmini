/* index.wxss */
/* 页面容器样式 */
page {
  background: linear-gradient(160deg, #6AB1F7 0%, #2A73D9 100%);
  min-height: 100vh;
  padding: 16px;
  box-sizing: border-box;
  position: relative;
  font-family: "PingFang SC", "Helvetica Neue", Arial, sans-serif;
  color: #333;
  padding-bottom: 100px;
}

/* 顶部区域 */
.wx-header {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16px;
}

.wx-logo {
  font-size: 20px;
  font-weight: 700;
  color: #fff;
  letter-spacing: 1px;
}

.wx-search-box {
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.15);
  border-radius: 20px;
  padding: 4px 12px;
}

.wx-search-box .icon {
  width: 20px;
  height: 20px;
  margin-right: 8px;
}

.wx-search-box input {
  background: transparent;
  border: none;
  color: #fff;
  font-size: 14px;
  outline: none;
}

/* 主功能区网格布局 */
.wx-grid {
  display: grid;
  grid-template-columns: 2fr 1fr;
  gap: 16px;
  margin-bottom: 16px;
  min-height: 160px;
  z-index: 1;
}

/* 卡片通用样式 */
.wx-card {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 12px;
  box-shadow: 0 4px 12px rgba(0, 0, 100, 0.1);
  position: relative;
  overflow: hidden;
  min-height: 80px;
}

/* 按压效果 */
.card:active {
  transform: translateY(2px);
  box-shadow: 0 2px 6px rgba(0, 0, 100, 0.1);
}

/* 智能喂食主卡片 */
/* 智能喂食主卡片 */
.main-card {
  padding: 24px 16px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 160px;
}

/* 主卡片图标 */
.main-icon {
  width: 58px;
  height: 58px;
  background: #E6F2FF;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 12px;
}

/* 主卡片标题 */
.main-title {
  font-size: 18px;
  font-weight: 600;
  color: #2a73d9;
  margin-bottom: 4px;
  text-align: center;
}

/* 主卡片副标题 */
.sub-title {
  font-size: 14px;
  color: #666;
  text-align: center;
}

/* 卡片标签 */
.wx-tag {
  position: absolute;
  top: 12px;
  right: 12px;
  background: #FFCD29;
  color: #333;
  font-size: 12px;
  font-weight: 600;
  padding: 4px 8px;
  border-radius: 4px;
}

/* 副功能区容器 */
/* 副功能区容器 */
.sub-card-group {
  display: flex;
  flex-direction: column;
  gap: 8px;
  min-height: 160px;
  justify-content: space-between;
  height: 100%;
}

/* 副卡片 */
.sub-card {
  padding: 12px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 95px;
  min-height: 0;
  box-sizing: border-box;
}

/* 副卡片图标 */
.sub-icon {
  width: 36px;
  height: 36px;
  margin-bottom: 6px;
}

.history-icon {
  background: #FFECDC;
  border-radius: 50%;
}

.camera-icon {
  background: #E3F7FF;
  border-radius: 50%;
}

.sub-title {
  font-size: 13px;
  font-weight: 500;
  color: #333;
  text-align: center;
}

/* 推荐区域 */
.recommendations {
  padding: 20px;
  margin-bottom: 80px;
  z-index: 1;
}

/* 推荐区头部 */
.section-header {
  display: flex;
  align-items: center;
  margin-bottom: 16px;
}

/* 推荐区图标 */
.book-icon {
  width: 24px;
  height: 24px;
  margin-right: 8px;
}

/* 推荐区标题 */
.section-title {
  font-size: 18px;
  font-weight: 600;
  color: #2a73d9;
}

/* 推荐内容列表 */
.recommendation-list {
  display: flex;
  flex-direction: column;
}

/* 推荐内容项 */
.recommendation-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12px 0;
  border-bottom: 1px solid rgba(0, 0, 0, 0.05);
}

/* 最后一项无边框 */
.recommendation-item:last-child {
  border-bottom: none;
}

/* 推荐内容项内容 */
.content {
  flex-grow: 1;
}

/* 推荐内容标题 */
.item-title {
  font-size: 16px;
  font-weight: 500;
  margin-bottom: 6px;
  color: #333;
}

/* 推荐内容描述 */
.item-desc {
  font-size: 13px;
  color: #666;
}

/* 推荐内容阅读数 */
.info {
  color: #2a73d9;
  font-size: 13px;
  font-weight: 600;
  min-width: 90px;
  text-align: right;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

/* 底部导航 */
.wx-nav {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  background: rgba(255, 255, 255, 0.98);
  box-shadow: 0 -4px 12px rgba(0, 0, 100, 0.1);
  padding: 8px 0;
  z-index: 999;
  border-top-left-radius: 16px;
  border-top-right-radius: 16px;
}

/* 导航项 */
.wx-nav-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  opacity: 0.6;
  transition: all 0.3s;
}

/* 激活导航项 */
.wx-nav-item.active {
  opacity: 1;
  transform: translateY(-4px);
}

/* 导航图标 */
.nav-icon {
  width: 24px;
  height: 24px;
  margin-bottom: 4px;
}

/* 导航文字 */
.nav-text {
  font-size: 12px;
  font-weight: 500;
}

/* 激活导航文字 */
.wx-nav-item.active .nav-text {
  color: #2a73d9;
  font-weight: 600;
}

/* 图标样式 - 使用内联SVG的data URI */
.main-icon {
  background-size: 36px 36px;
  background-repeat: no-repeat;
  background-position: center;
}

.history-icon {
  background-size: 28px 28px;
  background-repeat: no-repeat;
  background-position: center;
}

.camera-icon {
  background-size: 28px 28px;
  background-repeat: no-repeat;
  background-position: center;
}

.section-icon {
  background-size: 16px 16px;
  background-repeat: no-repeat;
  background-position: center;
}

.nav-item:nth-child(1) .nav-icon {
  background-size: 24px 24px;
  background-repeat: no-repeat;
  background-position: center;
}


.nav-item:nth-child(2) .nav-icon {
  background-size: 24px 24px;
  background-repeat: no-repeat;
  background-position: center;
}