/* 智能喂食页面样式，可复用首页主卡片样式 */
.wx-page {
    padding: 16px;
}

.wx-header {
    margin-bottom: 16px;
}

.wx-logo {
    font-size: 20px;
    font-weight: 700;
    color: #2a73d9;
}

.main-card {
    background: #fff;
    border-radius: 12px;
    padding: 24px;
    box-shadow: 0 4px 12px rgba(0, 0, 100, 0.08);
}

.main-title {
    font-size: 18px;
    font-weight: 600;
    color: #2a73d9;
    margin-bottom: 8px;
}

.sub-title {
    font-size: 14px;
    color: #666;
}